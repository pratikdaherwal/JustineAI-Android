<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="550dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="@color/black"
                android:centerColor="@color/purple_black"
                android:endColor="@color/purple"
                />
        </shape>
    </item>

    <!-- Semi-transparent overlay to break banding -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="550dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#0D000000"
            android:endColor="#1A000000"
            />
        </shape>
    </item>

</layer-list>

